@model OnlineShopping.Models.LoginRegisterViewModel
<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Login to your account</h2>
                    <form asp-controller="account" asp-action="login" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="text" placeholder="Username" asp-for="loginUsername" />
                        <input type="password" placeholder="Password" asp-for="loginPassword" />
                        <span>
                            <input type="checkbox" class="checkbox">
                            Keep me signed in
                        </span>
                        <button type="submit" class="btn btn-default">Login</button>
                    </form>
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">OR</h2>
            </div>
            <div class="col-sm-4">

                <div class="signup-form">
                    <!--sign up form-->
                    <h2>New User Signup!</h2>
                    <form asp-controller="account" asp-action="register" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="text" placeholder="Your Name" asp-for="registerName"/>
                        <input type="text" placeholder="Username" asp-for="registerUsername"/>
                        <input type="password" placeholder="Password" asp-for="registerPassword"/>
                        <button type="submit" class="btn btn-default">Signup</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->